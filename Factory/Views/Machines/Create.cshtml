@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h3>Register new machine</h3>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;"})</p>
<p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "font-weight: 600;"})</p>

@using (Html.BeginForm())
{
  <p>@Html.LabelFor(model => model.Name): 
    @Html.TextBoxFor(model => model.Name)</p>

  <p>@Html.LabelFor(model => model.Description): 
  @Html.TextBoxFor(model => model.Description)</p>

  <input type="submit" value="Register" class="btn btn-default" />
}
<hr>
<p>@Html.ActionLink("Cancel", "Index")</p>
