@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>Engineers -- Full List</h2>
<hr>

@if (Model.Count == 0)
{
<p><em>No engineers registered.</em></p>
}
else
{
  <ul>
  @foreach (Engineer engie in Model)
  {
    <li>@Html.ActionLink(@engie.Name, "Details", new { id = engie.EngineerId })</li>
  }
  </ul>
}

